<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/gasto_valor"
        android:layout_margin="20dp"
        android:text="      "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

   <TextView
       android:id="@+id/fecha_gasto"
       android:text="      "
       android:layout_margin="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintHorizontal_bias="1"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toEndOf="@id/gasto_valor"
       app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/cat_gasto"
        android:layout_margin="20dp"
        android:text="      "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gasto_valor"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/desc_gasto"
        android:text="      "
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gasto_valor"
        app:layout_constraintStart_toEndOf="@id/cat_gasto"/>

</androidx.constraintlayout.widget.ConstraintLayout>